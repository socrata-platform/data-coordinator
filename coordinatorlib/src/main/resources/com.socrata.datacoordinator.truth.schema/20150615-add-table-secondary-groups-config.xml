<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
    <changeSet author="krah" id="20150615-add-column-secondary-group">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="secondary_groups_config"/>
            </not>
        </preConditions>
        <createTable tableName="secondary_groups_config">
            <column name="group_name" type="VARCHAR(40)">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="is_default" type="BOOLEAN" defaultValue="false"/>
            <column name="instances" type="VARCHAR(40)[]" defaultValue="{}">
                <constraints nullable="false"/>
            </column>
            <column name="num_replicas" type="INT" defaultValue="1">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
