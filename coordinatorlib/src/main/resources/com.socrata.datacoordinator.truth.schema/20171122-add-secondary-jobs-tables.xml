<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
    <changeSet author="Alexa Rust" id="20171122-add-secondary-jobs-tables">
        <preConditions onFail="MARK_RAN">
            <and>
                <not>
                    <tableExists tableName="secondary_add_jobs"/>
                </not>
                <not>
                    <tableExists tableName="secondary_delete_jobs"/>
                </not>
            </and>
        </preConditions>
        <createTable tableName="secondary_add_jobs">
            <column name="dataset_system_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="secondary_add_jobs_dataset_system_id_fkey"
                             references="dataset_map(system_id)"
                />
            </column>
            <column name="store_id" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="job_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="step" type="SMALLINT">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex tableName="secondary_add_jobs" indexName="secondary_add_jobs_dataset_system_id_store_id">
            <column name="dataset_system_id"/>
            <column name="store_id"/>
        </createIndex>
        <createIndex tableName="secondary_add_jobs" indexName="secondary_add_jobs_job_id_step" unique="true">
            <column name="job_id"/>
            <column name="step"/>
        </createIndex>

        <createTable tableName="secondary_delete_jobs">
            <column name="dataset_system_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="secondary_delete_jobs_dataset_system_id_fkey"
                             references="dataset_map(system_id)"
                />
            </column>
            <column name="store_id" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="job_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="step" type="SMALLINT">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex tableName="secondary_delete_jobs" indexName="secondary_delete_jobs_dataset_system_id_store_id">
            <column name="dataset_system_id"/>
            <column name="store_id"/>
        </createIndex>
        <createIndex tableName="secondary_delete_jobs" indexName="secondary_delete_jobs_job_id_step" unique="true">
            <column name="job_id"/>
            <column name="step"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>